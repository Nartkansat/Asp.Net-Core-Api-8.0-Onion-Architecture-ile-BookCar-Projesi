@model List<ResultReviewByCarIdDto>

@{
    int count1 = 0;
    int count2 = 0;
    int count3 = 0;
    int count4 = 0;
    int count5 = 0;
}

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            <h3 class="head">Toplam Değerlendirme: @ViewBag.totalReview</h3>
            @foreach (var item in Model)
            {

                <div class="review d-flex">
                    <div class="user-img" style="background-image: url(@item.CustomerImage)"></div>
                    <div class="desc">
                        <h4>
                            <span class="text-left">@item.CustomerName</span>
                            <span class="text-right">@item.Date.ToShortDateString()</span>
                        </h4>
                        <div class="stars">
                            @for (int i = 0; i < item.RaitingValue; i++)
                            {
                                <span class="star">
                                    <i class="ion-ios-star"></i>
                                </span>
                            }
                        </div>

                        <p>@item.Comment</p>
                    </div>
                </div>
            }

        </div>

        <div class="col-md-5">
            <div class="rating-wrap">
                <h3 class="head">Değerlendirme Sonuçları</h3>
                <div class="a">

                    @foreach (var item2 in Model)
                    {

                        if (@item2.RaitingValue == 5)
                        {
                            count1++;
                        }
                        else if (@item2.RaitingValue == 4)
                        {
                            count2++;
                        }
                        else if (@item2.RaitingValue == 3)
                        {
                            count3++;
                        }
                        else if (@item2.RaitingValue == 2)
                        {
                            count4++;
                        }
                        else if (@item2.RaitingValue == 1)
                        {
                            count4++;
                        }
                    }

                    <div class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span style="width:max-content;">(@count1) Değerlendirme</span>
                    </div>
                    <div class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span style="width:max-content;">(@count2) Değerlendirme</span>
                    </div>
                    <div class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span style="width:max-content;">(@count3) Değerlendirme</span>
                    </div>
                    <div class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span style="width:max-content;">(@count4) Değerlendirme</span>
                    </div>
                    <div class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                        </span>
                        <span style="width:max-content;">(@count5) Değerlendirme</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>