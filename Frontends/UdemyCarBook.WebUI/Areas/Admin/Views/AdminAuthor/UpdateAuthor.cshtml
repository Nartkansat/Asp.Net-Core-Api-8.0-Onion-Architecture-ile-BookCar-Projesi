@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Yazar Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Yazar ile ilgili bilgileri eksiksiz doldurunuz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="AuthorID" />
                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Yazarı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="exampleInputName" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputName" placeholder="Görsel Url Giriniz">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>