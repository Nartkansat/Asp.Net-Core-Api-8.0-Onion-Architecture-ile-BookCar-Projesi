@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Hizmet Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Hizmet ile ilgili bilgileri eksiksiz doldurunuz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="exampleInputName" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="exampleInputName" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">İcon Url</label>
                                <input type="text" class="form-control" asp-for="IconUrl" id="exampleInputName" placeholder="İcon Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
