@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Referans ile ilgili bilgileri eksiksiz doldurunuz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Ad Soyad Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="exampleInputName" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Yorum</label>
                                <input type="text" class="form-control" asp-for="Comment" id="exampleInputName" placeholder="Yorum Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputName" placeholder="Görsel Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

