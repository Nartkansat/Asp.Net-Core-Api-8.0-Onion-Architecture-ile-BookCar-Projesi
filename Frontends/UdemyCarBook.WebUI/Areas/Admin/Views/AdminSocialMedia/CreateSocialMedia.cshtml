@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Sosyal Medya Hesabı Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal Medya Hesapları ile ilgili bilgileri eksiksiz doldurunuz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Sosyal Medya Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Linki</label>
                                <input type="text" class="form-control" asp-for="Url" id="exampleInputName" placeholder="Link Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">İcon Url</label>
                                <input type="text" class="form-control" asp-for="Icon" id="exampleInputName" placeholder="İcon Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

